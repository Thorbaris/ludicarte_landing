{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/layouts/*": ["src/layouts/*"],
      "@/src/*": ["src/*"],
      "@/public/*": ["public/*"],
      "@/components": ["src/components"],
      "@/layouts": ["src/layouts"],
      "@/src": ["src"],
      "@/public": ["public"]
    }
  }
}